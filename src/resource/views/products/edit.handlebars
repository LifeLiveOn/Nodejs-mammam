<div class="container" style="margin-top:10%"> 
    <h1 style="color:black;">Cap nhat san pham</h1>

    <form method="post" action="/products/{{data._id}}?_method=PUT">
        <div class="mb-3">
            <label for="productName" class="form-label">Product Name/Title</label>
            <input type="text" class="form-control" style="text-transform: lowercase" value='{{data.product_name}}' name="product_name" placeholder="Enter your Product title" required>
        </div>
        <div class="mb-3">name
            <label for="productDescription" class="form-label">Product Description</label>
            <textarea type="text" class="form-control"  name="description" placeholder="Description" rows="3">{{data.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="productCate" class="form-label">Category</label>
            <select class="form-select" name="category" required>
                <option selected disabled value="">{{data.category}}</option>
                <option value="figure">figure</option>
                <option value="gun_model">gun_model</option>
                <option value="lego">lego</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="productPrice" class="form-label">Price</label>
            <input type="text" class="form-control" value='{{data.price}}' name="price" placeholder="Price">
        </div>
        <div class="mb-5">
            <h1>{{data.image}} name of old image</h1>
                <label for="Image" class="form-label"> image Upload with Preview</label>
                <input class="form-control" type="file" name="image" id="formFile" onchange="preview()" required>
        </div>
            <img id="frame" src="" class="img-fluid" />
        <button type="submit" class="btn btn-info" id="submitbutton">update Product</button>
    </form>
    <script>
            function preview() {
                frame.src = URL.createObjectURL(event.target.files[0]); // name.jpg
            }
        </script>
</div>